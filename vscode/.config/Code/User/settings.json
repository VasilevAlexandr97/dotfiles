{
    // Vscode settings
    "update.mode": "none",
    "telemetry.feedback.enabled": false,
    "redhat.telemetry.enabled": false,
    
    "files.autoSave": "afterDelay",
    
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.panel.showLabels": false,
    // "workbench.editor.showTabs": "single",
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.indent": 16,
    // "material-icon-theme.hidesExplorerArrows": true,
    
    "explorer.compactFolders": false,
    "security.workspace.trust.untrustedFiles": "open",
    
    "window.zoomLevel": 0,
    
    "editor.fontFamily": "'JetBrains Mono Nerd Font', Consolas, monospace, 'Noto Color Emoji'",
    "editor.rulers": [
        79
    ],
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.guides.bracketPairs": "active",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontWeight": "normal",
    "editor.minimap.enabled": false,
    
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font, 'MesloLGS NF', 'monospace', monospace",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.automationProfile.linux": {},
    "terminal.integrated.automationProfile.osx": {},
    "terminal.integrated.env.windows": {},
    "terminal.integrated.automationProfile.windows": {},

    "explorer.confirmDelete": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "Cargo.toml": "Cargo.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s2db": "${capture}.${extname}-*"
    },

    // Git settings
    "git.confirmSync": false,
    "git.ignoreRebaseWarning": true,

    // Copilot settings
    // "github.copilot.nextEditSuggestions.enabled": false,
    // "github.copilot.enable": {
    //     "*": false,
    //     "plaintext": false,
    //     "markdown": false,
    //     "scminput": false
    // },
    
    // Codeium settings
    "codeium.enableConfig": {
        "*": true,
        "ignore": true,
        "window.customTitleBarVisibility": "auto",
        "properties": true,
        "plaintext": true
    },
    
    // Python settings
    "python.analysis.typeCheckingMode": "standard",
    "python.venvPath": "~/.cache/pypoetry/virtualenvs, ~/.local/share/virtualenvs",
    "python.analysis.diagnosticSeverityOverrides": {},
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.experiments.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "python.defaultInterpreterPath": "/bin/python3.14",
    "python.analysis.exclude": [
        "./.venv/**"
    ],
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.activateEnvironment": false,
    "python-envs.terminal.autoActivationType": "off",
    "python-envs.terminal.showActivateButton": true,
    
    "vsicons.dontShowNewVersionMessage": true,
    
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    
    "database-client.autoSync": true,
    "remote.defaultExtensionsIfInstalledLocally": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github"
    ],

    // Docker settings
    "docker.extension.enableComposeLanguageServer": false,
}